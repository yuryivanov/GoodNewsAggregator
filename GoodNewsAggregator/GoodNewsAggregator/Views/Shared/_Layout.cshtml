<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>АХН - @ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link href="~/lib/bootstrap/dist/css/bootstrap.css/bootstrap.css.map" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css/bootstrap.min.css/bootstrap.min.css.map" rel="stylesheet">

    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css/bootstrap-grid.css.map" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css/bootstrap-grid.min.css/bootstrap-grid.min.css.map" rel="stylesheet">

    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css/bootstrap-grid.min.css.map" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css/bootstrap-reboot.min.css/bootstrap-reboot.min.css.map" rel="stylesheet">

    <!-- favicon -->
    <link href="~/img/favicon.png" rel=icon>


    <link href="~/css/NavBar.css" rel="stylesheet">
    <link href="~/css/Text.css" rel="stylesheet">

</head>

<body id="page-top" data-spy="scroll" data-target=".navbar">

    <div class="uc-mobile-menu-pusher">
        <div class="content-wrapper">
            <section id="header_section_wrapper" class="header_section_wrapper">
                <div class="container">
                    <div class="header-section">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="logo">
                                    <a href="/News/AllNews">
                                        <img src="/img/Logo.png"
                                             alt="GoodNewsAggregatorLogo">
                                    </a>
                                </div>
                                <!-- Logo Section -->
                            </div>

                            <div class="col-md-4">
                                <div class="left_section">                                   
                                </div>
                                <!-- Left Header Section -->
                            </div>

                            <div class="col-md-3">
                                <div class="right_section">
                                    <p>UserLogin</p>
                                    <a href="/Account/Login">Войти</a><br /><br />
                                    <a href="/Account/Register">Зарегистрироваться</a><br /><br />
                                    <span class="time" lang="ru-ru">
                                        @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                    <!-- Time -->
                                    <!-- Login Section -->
                                </div>
                                <!-- Right Header Section -->
                            </div>
                        </div>
                    </div>
                    <!-- Header Section -->
                </div>
                <!-- .container -->
            </section></br>
            <!-- header_section_wrapper -->

            <div class="container body-content">
                @RenderBody()
            </div>

            <section id="footer_section" class="footer_section">
                <div class="footer_bottom_Section">
                    <div class="container">
                        <div class="row">
                            <div class="footer">
                                <div class="col-sm-3">
                                </div>
                                <div class="col-sm-6">
                                    <p>&copy; 2021-Агрегатор Хороших Новостей . Дизайн: <a href="#">Юрий Иванов</a> </p>
                                </div>
                                <div class="col-sm-3">
                                    <p>Только Хорошие Новости</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>

</html>